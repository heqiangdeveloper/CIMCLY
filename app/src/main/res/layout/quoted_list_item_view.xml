<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/input_type_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/description_et_tv"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:text="底盘特殊要求1："
            android:textColor="@color/black_3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/red_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red" />

        <!--<EditText
            android:id="@+id/quoteValue_et_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:maxLines="30"
            android:padding="10dip"
            android:textColor="@color/black_33"
            android:textSize="14sp" />-->
        <!--最大输入30个字符-->
        <EditText
            android:id="@+id/quoteValue_et_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:maxLength="30"
            android:textColor="@color/black_33"
            android:background="@color/white"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:background="#f2f2f2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/description_tv_tv"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:padding="10dip"
            android:text="底盘殊底殊底殊底盘殊："
            android:textColor="@color/black_3"
            android:textSize="14sp" />

        <!--<TextView
            android:id="@+id/quoteValue_tv_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="10dip"
            android:ellipsize="none"
            android:scrollHorizontally = "false"
            android:minLines="3"
            android:maxLines="30"
            android:inputType="textMultiLine"
            android:textColor="@color/black_33"
            android:textSize="14sp" />-->
        <TextView
            android:id="@+id/quoteValue_tv_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/black_33"
            android:background="@color/white"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
